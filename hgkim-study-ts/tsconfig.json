{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@commons/*": ["src/commons/*"]
    },
    "types": ["node", "jest", "jest-plugin-context"],
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "coverage", "__tests__"]
}